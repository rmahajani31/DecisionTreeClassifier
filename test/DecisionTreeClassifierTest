from DecisionTreeClassifier import *

def test_calculate_entropy(dt_classifier):
    print(dt_classifier.calculate_entropy(dt_classifier.data))
    print(-1 * (0.3 * math.log2(0.3) + 0.5 * math.log2(0.5) + 0.1 * math.log2(0.1)))
    assert dt_classifier.calculate_entropy(dt_classifier.data) == -1 * (0.3 * math.log2(0.3) + 0.6 * math.log2(0.6) + 0.1 * math.log2(0.1))



















def main():
    test_file = "test_decision_tree.csv"
    dt_classifier = DecisionTreeClassifier(test_file, "info gain", 5, 2)
    test_calculate_entropy(dt_classifier)


if __name__ == '__main__':
    main()